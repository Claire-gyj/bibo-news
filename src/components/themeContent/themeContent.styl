.theme_wrapper
  .head_wrapper
    position fixed
    top 0
    left 0
    width 100%
    height 64px
    color #fff
    z-index 5
    overflow hidden
    .bg_image
      position absolute
      z-index -1
      left -6px
      top -6px
      width 110%
      height 84px
      background-position center
      background-size 100%
      filter blur(6px)
    .title_wrapper
      padding 32px 16px 12px 12px
      display flex
      justify-content space-between
      .icon-cheveron-left
        font-size 22px
        line-height 22px
      .name
        font-size 18px
        line-height 22px
      .icon-followed, .icon-unfollow
        font-size 16px
        line-height 22px
  .content_wrapper
    margin-top 64px
    .editors_avatar
      box-sizing border-box
      padding 11px 15px
      width 100%
      border-bottom 1px solid #e5e5e5
      .editor
        font-size 15px
        line-height 20px
        margin-right 18px
        color #666666
      .avatar
        display inline-block
        margin-right 4px
        width 20px
        height 20px
        border-radius 50%
        vertical-align middle
        overflow hidden
      .icon-cheveron-right
        position absolute
        right 10px
        vertical-align middle
        font-size 24px
        line-height 20px
        color #cdcdcd
    .titles
      padding 0 15px
      .title
        box-sizing border-box
        min-height 83px
        padding-top 15px
        font-size 16px
        line-height 22px
        color #6a6a6a
        border-bottom 1px solid #f6f6f6

