.list
  .news_item
    padding 16px 15px 0 16px
    display flex
    box-sizing border-box
    width 100%
    height 91px
    border-bottom 1px solid #f6f6f6
    .title
      flex 1
      margin 0 16px 0 0 !important
      font-size 16px
      line-height 20px
      color #333
    .pic
      width 75px
      height 60px
      overflow hidden
      img
        width auto
        height auto
        max-width 100%