.editors_wrapper 
  position fixed
  z-index 20
  top 0
  left 0
  bottom 0
  width 100%
  background-color #fff
  .editor_head_wrapper
    box-sizing border-box
    padding 32px 0 12px 16px
    width 100%
    height 64px
    text-align center
    background-color #00a2ed
    color #fff
    .icon-cheveron-left
      position fixed
      left 10px
      font-size 26px
      line-height 26px
      vertical-align middle
    .title
      font-size 17px
      line-height 26px
  .editors_list
    .editor
      box-sizing border-box
      padding 10px 15px
      width 100%
      height 55px
      border-bottom 1px solid #ebebeb
      .avatar
        display inline-block
        margin-right 15px
        float left
        width 35px
        height 35px
        border-radius 50%
      .info
        .name
          display block
          margin-bottom 10px
          font-size 15px
          color #000
        .bio
          display block
          font-size 10px
          color #9e9e9e