.content_wrapper
  width 100%
  position relative
  .head_wrapper
    width 100%
    height 200px
    position absolute
    left 0
    top 0
    .head
      position relative
      width 100%
      height 200px
      background-color #888
      overflow hidden
      .bg
        position absolute
        top -60px
        width auto
        height auto
        max-width 100%
      .title
        position absolute
        left 16px
        bottom 27px
        font-size 20px
        line-height 26px
        color #fff
      .author
        position absolute
        right 16px
        bottom 10px
        font-size 9px
        color #b8b8b8
  .content
    margin 0 0 43px
    img
      margin 0 !important
      display inline-block
      vertical-align middle
  .bottom_nav
    width 100%
    height 43px
    position fixed
    left 0
    bottom 0
    display flex
    justify-content space-around
    align-items center
    background #fff
    box-shadow 0 -1px 5px #f2f2f2
    .wrapper
      &.popularity
        position relative
        margin 10px
        font-size 20px
        .popularity_count
          position absolute
          left 14px
          top -8px
          font-size 10px
          color #6c6c6c
          &.add
            color #20b4f1
      &.comment
        position relative
        margin 10px
        font-size 20px
        .comment_count
          position absolute
          left 10px
          top -6px
          width 21px
          height 14px
          text-align center
          font-size 9px
          line-height 14px
          color #fff
          background-color #20b4f1
      .icon
        color #999999
        &.icon-cheveron-left
          font-size 28px
        &.icon-cheveron-down
          font-size 28px