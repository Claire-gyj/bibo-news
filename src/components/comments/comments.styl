.comments_wrapper
  .count
    position relative
    padding-left 16px
    width 100%
    height 43px
    font-size 16px
    line-height 43px
    color #333
    box-sizing border-box
    border-bottom 1px solid #eee
    &.short
      border-top 1px solid #eee
    .icon-show
      display block
      position absolute
      right 10px
      top 12px
      font-size 20px
      color #b8b8b8
  .content_wrapper
    box-sizing border-box
    margin 0
    padding 15px
    display flex
    flex-direction row
    border-bottom 1px solid #eee
    .avatar_wrapper
      margin-right 11px
      float left
      width 30px
      height 30px
      background-color #b8b8b8
      border-radius 50%
      img
        width 30px
        height 30px
        border-radius 50%
    .info
      flex 1
      .author
        display block
        font-size 15px
        font-weight 700
        line-height 30px
        color #333333
      .content
        margin 0 15px 0 0
        padding 0
        clear both
        font-size 15px
        line-height 18px
        color #333333
  .long_comments
    margin-top 64px
    .no_comment
      padding-top 164px
      .icon-no-comment
        display block
        text-align center
        margin 0 auto 20px
        font-size 110px
        color #e4e4e4
      .desc
        display block
        margin 0 auto 212px
        font-size 16px
        text-align center
        color #e4e4e4
  .short_comments
    margin-bottom 38px
  .comments_all_count
    position fixed
    top 0
    left 0
    width 100%
    height 64px
    text-align center
    font-size 20px
    line-height 85px
    background-color #00a2ed
    color #fff
  .write_comment
    display flex
    position fixed
    left 0
    bottom 0
    width 100%
    height 38px
    background-color #3c3c3c
    .left_wrapper
      width 50px
      height 38px
      border-right 1px solid #505050
      .icon-cheveron-left
        display block
        position absolute
        left 14px
        top 8px
        font-size 22px
        color #e6e6e6
    .right_wrapper
      flex 1
      border-left 1px solid #313131
      .write
        margin 0 auto
        width 72px
        .icon-write-comment
          margin 10px 2px 10px
          display inline-block
          float left
          width 18px
          height 18px
          color #e6e6e6
        .text
          font-size 14px
          line-height 38px
          color #e6e6e6
